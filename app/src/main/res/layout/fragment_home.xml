<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_frame_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:id="@+id/home_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_games_online"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="10dp">

            <Button
                android:id="@+id/button_current_games_mellon"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="Current Games on Mellon: 0"
                android:textAlignment="viewStart"
                android:textColor="@color/text_default"
                app:icon="@android:drawable/ic_menu_set_as"
                app:iconGravity="end"
                app:iconTint="@color/text_default"
                app:iconTintMode="multiply" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/home_layout_news"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ttle_latest_news"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center_vertical"
                    app:drawableTintMode="multiply"
                    android:text="@string/recentnews_title"
                    android:textAllCaps="true"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/green"
                    app:drawableEndCompat="@android:drawable/ic_menu_send"
                    app:drawableStartCompat="@android:drawable/ic_menu_sort_by_size"
                    app:drawableTint="@color/green" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/home_layout_news_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"></LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/home_layout_events_rl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/title_upcoming_events"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="5dp"
                    app:drawableTintMode="multiply"
                    android:gravity="center_vertical"
                    android:text="@string/upcomingevents_title"
                    android:textAllCaps="true"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/green"
                    app:drawableEndCompat="@android:drawable/ic_menu_send"
                    app:drawableStartCompat="@android:drawable/ic_menu_my_calendar"
                    app:drawableTint="@color/green" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/home_layoyut_events_rl_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"></LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/home_layout_online"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/title_upcoming_events_online"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="5dp"
                    android:text="@string/upcomingevents_title_online"
                    android:gravity="center_vertical"
                    android:textAllCaps="true"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/green"
                    app:drawableEndCompat="@android:drawable/ic_menu_send"
                    app:drawableStartCompat="@android:drawable/ic_menu_today"
                    app:drawableTint="@color/green"
                    app:drawableTintMode="multiply" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/home_layout_events_online_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"></LinearLayout>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>